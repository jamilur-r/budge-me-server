{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 100,
		"bracketSpacing": true,
		"bracketSameLine": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error",
				"noConstAssign": "error"
			},
			"style": {
				"noImplicitBoolean": "warn"
			},
			"suspicious": {
				"noDoubleEquals": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"indentStyle": "tab",
			"indentWidth": 4,
			"quoteStyle": "double",
			"trailingCommas": "es5",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded",
			"bracketSpacing": true,
			"bracketSameLine": false
		}
	},
	"json": {
		"formatter": {
			"indentStyle": "tab",
			"indentWidth": 2
		}
	}
}
